/* pages/report/report.wxss */

.tabs {
  margin: 0 0 10rpx 60rpx;
  font-size: 29rpx;
  color: rgba(69, 90, 100, 0.6);
}
.tabs-container {
  flex-direction: row;
  display: flex;
  margin-left: 13rpx;
}
.tabs-label {
  margin: 20rpx 50rpx;
  font-size: 28rpx;
}
.tabs-content {
  margin: 20rpx 0 20rpx 100rpx;
}
.except-2 {
  margin-left: 70rpx;
  font-size: 20rpx;
}
.vertical-except {
  margin-left: 60rpx;
  font-size: 28rpx;
}
.vertical-except-contnet {
  padding: 20rpx 0;
}
.vertical-except-contnet:last-child {
  padding-bottom: 0;
}

.field-label {
  color:#000;
  font-size: 28rpx;
  margin-left: 37rpx;
  font-weight: 500;
}
.form-box{
  position: relative;
  margin-left: 60rpx;
  white-space: nowrap;
  font-size:0;
  min-height:85rpx;
  vertical-align: top;
  border-bottom:1rpx solid rgba(255,255,255,.0);
}
.form-box input{
padding:10rpx 0;
font-size:28rpx;
border-bottom:1rpx solid #dbdada;
height:84rpx;
box-sizing:border-box;
}

.field-class {
  margin-top: 0rpx;
  margin-left: 30rpx;
}
.collapse-class {
  margin-left: 30rpx;
}